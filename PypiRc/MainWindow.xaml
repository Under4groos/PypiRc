<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:PypiRc" xmlns:controls="clr-namespace:PypiRc.Controls" x:Class="PypiRc.MainWindow"  
        mc:Ignorable="d" AllowsTransparency="True" WindowStyle="None" 
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <SolidColorBrush></SolidColorBrush>
    </Window.Background>
    <Grid Background="#E51F1F1F">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Left" Margin="5,50,5,0" >
                <local:BButton Text="Download for Windows"/>
                <local:BButton Text="2"/>
                <local:BButton Text="3"/>
                <local:BButton Text="4"/>
            </StackPanel>
            <Border HorizontalAlignment="Right" Background="#2E2E2E" Width="1"></Border>
        </Grid>
        <Grid Margin="150,0,0,0">
            <controls:DGrid Class="Download for Windows">
                <StackPanel x:Name="StackPanel_panels_ver" Margin="0,45,0,0" Background="{x:Null}">
                    
                </StackPanel>
            </controls:DGrid>
        </Grid>
    </Grid>
</Window>
